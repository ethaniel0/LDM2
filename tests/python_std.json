[
  {
    "type": "expression_separator",
    "name": "main",
    "translate": "\n"
  },
  {
    "type": "value_keyword",
    "name": "true",
    "translate": "True"
  },
  {
    "type": "value_keyword",
    "name": "false",
    "translate": "False"
  },

  {
    "type": "primitive_type",
    "name": "bool",
    "translate": "bool"
  },
  {
    "type": "primitive_type",
    "name": "int",
    "translate": "int"
  },
  {
    "type": "primitive_type",
    "name": "int8",
    "translate": "int"
  },
  {
    "type": "primitive_type",
    "name": "float",
    "translate": "float"
  },

  {
    "type": "structure",
    "name": "make_variable_standard",
    "translate": "$varname: $type = $expr"
  },

  {
    "type": "structure",
    "name": "function",
    "translate": "def $varname ( $arguments ) $body",
    "component_features": {
      "arguments": {
        "translate": "$varname: $type",
        "separator": ", "
      }
    }
  },

  {
    "type": "structure",
    "name": "main_block",
    "translate": ":\n$body",
    "component_features": {
      "body": {
        "indent": 4
      }
    }
  },

  {
    "type": "structure",
    "name": "if",
    "translate": "if $condition $body"
  },

  {
    "type": "structure",
    "name": "+",
    "translate": "$left + $right"
  },

  {
    "type": "operator_overload",
    "name": "+",
    "left": "int", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "+",
    "left": "float", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "+",
    "left": "int", "right": "float"
  },
  {
    "type": "operator_overload",
    "name": "+",
    "left": "float", "right": "int"
  },

  {
    "type": "structure",
    "name": "-",
    "translate": "$left - $right"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "int", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "float", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "int", "right": "float"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "float", "right": "int"
  },

  {
    "type": "structure",
    "name": "neg",
    "translate": "- $right"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "int", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "-",
    "left": "float", "right": "float"
  },

  {
    "type": "structure",
    "name": "*",
    "translate": "$left * $right"
  },
  {
    "type": "operator_overload",
    "name": "*",
    "left": "int", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "*",
    "left": "float", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "*",
    "left": "int", "right": "float"
  },
  {
    "type": "operator_overload",
    "name": "*",
    "left": "float", "right": "int"
  },

  {
    "type": "structure",
    "name": "?:",
    "translate": "$if_true if $condition else $if_false"
  },
  {
    "type": "operator_overload",
    "name": "?:",
    "condition": "bool",
    "if_true": "$typename<T>",
    "if_false": "$typename<T>"
  },

  {
    "type": "structure",
    "name": "=",
    "translate": "$left = $right"
  },
  {
    "type": "operator_overload",
    "name": "=",
    "left": "$typename<T>",
    "right": "$typename<T>"
  },


  {
    "type": "structure",
    "name": "<",
    "translate": "$left < $right"
  },
  {
    "type": "operator_overload",
    "name": "<",
    "left": "int", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "<",
    "left": "float", "right": "int"
  },
  {
    "type": "operator_overload",
    "name": "<",
    "left": "int", "right": "float"
  },
  {
    "type": "operator_overload",
    "name": "<",
    "left": "float", "right": "int"
  }
]